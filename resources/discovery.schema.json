{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/schemas/discovery.schema.json",
    "type": "object",
    "required": [
      "id",
      "outputs",
      "options"
    ],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[^\\.]+$"
      },
      "remote": {
        "type": "boolean"
      },
      "options": {
        "type": "object",
        "properties": {
          "scc": {
            "oneOf": [
              {
                "type": "boolean"
              },
              {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^[^\\.]+\\.[^\\.]+\\.[^\\.]+$"
                }
              }
            ]
          }
        },
        "additionalProperties": false
      },
      "outputs": {
        "type": "object",
        "patternProperties": {
          "^(?:[^\\.]+\\.[^\\.]+)$": {
            "$ref": "feature.schema.json#/definitions/feature"
          }
        },
        "additionalProperties": false
      },
      "rules": {
        "$ref": "rules.schema.json"
      }
    },
    "additionalProperties": false
  }