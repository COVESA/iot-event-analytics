{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/schemas/discovery.schema.json",
    "type": "object",
    "required": [
      "id",
      "config"
    ],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[^\\.]+$"
      },
      "config": {
        "type": "object",
        "required": [
          "rules"
        ],
        "properties": {
          "outputs": {
            "type": "object",
            "patternProperties": {
              "^(?:[^\\.]+\\.[^\\.]+)$": {
                "$ref": "feature.schema.json#/definitions/feature"
              }
            },
            "additionalProperties": false
          },
          "rules": {
            "$ref": "rules.schema.json"
          },
          "scc": {
            "oneOf": [
              {
                "type": "boolean"
              },
              {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^[^\\.]+\\.[^\\.]+\\.[^\\.]+$"
                }
              }
            ]
          }
        }
      }
    },
    "additionalProperties": false
  }